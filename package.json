{
  "private": true,
  "scripts": {
    "clean": "rm -rf ./node_modules && yarn workspaces run clean",
    "lint": "eslint . --ignore-path .gitignore",
    "format": "pretty-quick"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && lint-staged"
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-plugin-shopify": "^28.0.0",
    "husky": "^2.3.0",
    "lerna": "^3.13.1",
    "lint-staged": "^8.1.7",
    "now": "^15.2.0",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0"
  }
}
